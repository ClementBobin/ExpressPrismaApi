{
  "name": "express-api",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --watch src src/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate": "npx tsc --noEmit && npm run test && npx prisma validate && npx prisma format && npx jest --coverage",
    "docker": "docker-compose up -d",
    "db": "npx prisma studio",
    "seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate",
    "setup:dev": "npm i && prisma generate && prisma migrate dev --name init && npm run seed",
    "setup:prod": "npm i --prod && prisma generate && prisma migrate deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.2",
    "@prisma/client": "^6.3.1",
    "@scalar/express-api-reference": "^0.4.180",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-oauth2-jwt-bearer": "^1.7.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "prisma": "^6.3.1",
    "tsx": "^4.19.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.3"
  }
}
